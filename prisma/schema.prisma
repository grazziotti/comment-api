// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String   @unique
  password String
  comments Comment[]
  votes Vote[]
  createdAt DateTime @default(now())
  deletedAt DateTime? 

  @@map("users")
}

model Comment {
    id String @id @default(uuid())
    content String
    user User @relation(fields: [userId], references: [id])
    userId String
    parent Comment? @relation(fields: [parentId], references: [id], name: "ChildComments")
    parentId String?
    replyTo Comment? @relation(fields: [replyToId], references: [id], name: "ReplyToComments")
    replyToId String?
    votes Vote[]
    createdAt DateTime @default(now())
    updatedAt DateTime?
    @@map("comments")

    replies     Comment[] @relation("ChildComments")
    repliedToBy Comment[] @relation("ReplyToComments")
}

model Vote {
    id String @id @default(uuid())
    user User @relation(fields: [userId], references: [id])
    userId String
    comment Comment @relation(fields: [commentId], references: [id])
    commentId String
    voteType String
    createdAt DateTime @default(now())
    @@map("votes")
}
